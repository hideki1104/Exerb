<div class="container">
  <div class="row">
    <div class="col-xs-12">
		<h1>ジャンル編集画面</h1>


        <div class="genre_edit_table">
	        <table>
				<%= form_for(@genre,url:admin_genre_path) do |f| %>
				<tr>
				    <td><%= f.text_field :genre_name, autofocus: true, autocomplete: "genre_name" %>
					<%= f.label :有効  %>
					<%= f.radio_button :class_status, :有効 %>
					<%= f.label :無効  %>
					<%= f.radio_button :class_status, :無効 %></td>
				</tr>
					<td>
							<%= f.submit "変更する",class:"btn btn-info" %>
					</td>
				<% end %>
			</table>
		</div>
	 </div>
   </div>
</div>
