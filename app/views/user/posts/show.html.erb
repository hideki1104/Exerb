<div class="container">
	<div class="row">
		<div class="col-xs-6">
			<h1>コミュニティ</h1>
			<table>
				<tr>
					<td><%= attachment_image_tag @user, :profile_image, :fill, 150, 150, format: 'jpeg',fallback: "no_image.jpg",class:"profile_image" %></td>
					<td><%= link_to "" ,edit_user_path(@user.id),class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_10783" %></td>
				</tr>
				<tr>
					<th>名前</th>
					<td><%= @user.name %></td>
				</tr>
				<tr>
					<th>自己紹介</th>
				</tr>
				<tr>
					<td><%= @user.introduction %></td>
				</tr>
			</table>

            <h2>新規投稿</h2>
            <%= form_for(@post_new,url:user_posts_path) do |f| %>
            <table>
            	<tr>
            		<td><%= f.text_area :impression, size: "50×100" %></td>
            	</tr>
            	<tr>
            		<td><%= f.submit "投稿する",class: "btn btn-primary btn-lg active" %></td>
            	</tr>
			<% end %>
			</table>
		</div>

		<div class="col-xs-6">
			<h1>投稿詳細画面</h1>
			<table>
				<tr>
					<td><%= link_to user_path(@post.user.id) do %><%= attachment_image_tag @post.user, :profile_image, :fill, 50, 50, format: 'jpeg',fallback: "no_image.jpg",class:"profile_image" %><% end %>
							<%= @post.created_at %></td>
				</tr>
				<tr>
					<td><%= @post.impression %></td>
				</tr>

                <tr>
                	<!-- いいね機能 -->
					<% if @post.favorited_by?(current_user) %>
						<td><%= link_to user_post_favorites_path(@post), method: :delete do %>
						<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
						<% end %>
						<%= @post.favorites.count %> 件のいいね<td>
					<% else %>
						<td><%= link_to user_post_favorites_path(@post), method: :post do %>
					    <i class="fa fa-heart-o" aria-hidden="true"></i>
					    <% end %>
					    <%= @post.favorites.count %> 件のいいね</td>
					<% end %>
					<% @post.favorites.each do |favorite| %>
					<td><%= attachment_image_tag favorite.user, :profile_image, :fill, 30, 30, format: 'jpeg',fallback: "no_image.jpg",class:"profile_image" %></td>
					<% end %>
				<tr>
			</table>

			<!-- コメント機能 -->

		<table>

		</table>

		</div>
	</div>
</div>