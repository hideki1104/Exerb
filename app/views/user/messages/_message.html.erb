<div class="chat">
	<div class="chat_image">
		<%= attachment_image_tag message.user, :profile_image, :fill, 50, 50, format: 'jpeg',fallback: "no_image.jpg",class:"profile_image" %>
	</div>
	<div class="chat_area">
	    <div class="chat_message">
			<%= message.content %>
		</div>
	</div>
	<%= message.created_at.strftime("%-m/%-d/ %-H:%-M ") %>
</div>